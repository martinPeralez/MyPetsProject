<div class="container">
    <div class="row content">
        <div class="col-md-3 mb-3">
            <img src="/images/LoginPicture/images.jpg" alt="Cute Cat and Dog" />
        </div>
        <div class="col-md-6">
            <h3 class="signin-text mb-3"> History </h3>
            <form method="post">
                <input type="hidden" asp-for="PetId" />
                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <label for="date"> Date: </label>
                    <input asp-for="Date" name="date" type="date" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="summary">Summary</label>
                    <input asp-for="Summary" name="summary" type="text" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="weight">Weight</label>
                    <input asp-for="Weight" name="weight" type="text" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="medication">Medication</label>
                    <input asp-for="Medication" name="medication" type="text" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="firstmeal">First Meal</label>
                    <input asp-for="FirstMeal" name="firstmeal" type="time" class="form-control" />
                </div>
                <div class="form-group">
                    <label for="secondmeal">Second Meal</label>
                    <input asp-for="SecondMeal" name="secondmeal" type="time" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Appointment</label>
                    <select for="appointment" asp-for="Appointment">
                        <option value="True">True</option>
                        <option value="False">False</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-class m-2"> Add History </button>
                <a class="btn btn-class m-2" asp-controller="Pet" asp-action="Detail" asp-route-id="@Model.PetId"> Back </a>
            </form>
        </div>
    </div>
</div>