@model User

<form method="post">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="FirstName" />
    <input type="hidden" asp-for="LastName" />
    <input type="hidden" asp-for="Email" />
    <input type="hidden" asp-for="Password" />

    <table>
        <tr>
            <th>First Name:</th>
            <td>@Model.FirstName</td>
        </tr>
        <tr>
            <th>Last Name:</th>
            <td>@Model.LastName</td>
        </tr>
        <tr>
            <th>Email:</th>
            <td>@Model.Email</td>
        </tr>
        <tr>
            <th>Address:</th>
            <td><input asp-for="Address" /></td>
        </tr>
        <tr>
            <th>Phone Number:</th>
            <td><input asp-for="PhoneNumber" /></td>
        </tr>

        <tr>
            <th>Password:</th>
            <td><a asp-controller="User" asp-action="ChangePassword" asp-route-id="@Model.Id"> Change Password </a></td>
        </tr>
        <tr>
            <th></th>
            <td><input type="submit" value="Update" /></td>
        </tr>
    </table>
</form>