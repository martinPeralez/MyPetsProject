<div class="container">
    <div class="row content">
        <div class="col-md-3 mb-3">
            <img src="~/images/LoginPicture/images.jpg" alt="Cute Cat and Dog" class="img-fluid img-thumbnail" />
        </div>
        <div class="col-md-6">
            <h3 class="signin-text mb-3"> Register </h3>
            <form method="post">
                <div class="form-group">
                    <label for="firstname"> First Name: </label>
                    <input asp-for="FirstName" name="firstname" type="text" placeholder="Name@Example.com" required class="form-control" />
                </div>
                <div class="form-group">
                    <label for="lastname"> Last Name: </label>
                    <input asp-for="LastName" name="lastname" type="text" required class="form-control" />
                </div>
                <div class="form-group">
                    <label for="address"> Address:</label>
                    <input asp-for="Address" name="address" type="text" required class="form-control" />
                </div>
                <div class="form-group">
                    <label for="phonenumber">Phone Number:</label>
                    <input asp-for="PhoneNumber" name="phonenumber" type="tel" required class="form-control" />
                </div>
                <div class="form-group">
                    <label for="email">Email:</label>
                    <input asp-for="Email" name="email" type="email" required class="form-control" />
                </div>
                <div class="form-group">
                    <label for="password">Password:</label>
                    <input asp-for="Password" name="password" type="password" required class="form-control" />
                </div>
                <div class="form-group">
                    Confirm Password:
                    <input asp-for="VerificationPassword" type="password" required class="form-control" />
                </div>
                <button type="submit" class="btn btn-class mt-2"> Register </button>
            </form>
        </div>
    </div>
</div>