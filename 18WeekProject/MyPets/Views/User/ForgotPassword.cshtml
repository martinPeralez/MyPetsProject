<div class="container">
    <div class="row content">
        <div class="col-md-3 mb-3">
            <img src="~/images/LoginPicture/images.jpg" alt="Cute Cat and Dog" />
        </div>
        <div class="col-md-6">
            <h3 class="signin-text mb-3"> Login </h3>
            <form method="post">
                <div class="form-group">
                    <label for="email"> Please enter your email: </label>
                    <input name="email" type="email" placeholder="JonDoe@Example.com" required class="form-control" />
                </div>
                <button type="submit" class="btn btn-class mt-2" asp-controller="Home" asp-action="SendEmail"> Send Email </button>
            </form>
        </div>
    </div>
</div>