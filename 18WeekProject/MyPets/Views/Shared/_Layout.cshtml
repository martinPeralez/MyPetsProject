@inject IUserRepository repository

<!DOCTYPE html>

<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
    <link href="~/lib/css/styles.css" rel="stylesheet" />
    <title> Tracking The Beans </title>
</head>

<body>
    <header>
        <a class="logo links" asp-controller="Home" asp-action="Index"> Tracking The Beans </a>
        <nav>
            <ul class="nav__links">
                @if (repository.IsUserLoggedIn())
                {
                    <li class="lis">
                        <a class="links" asp-controller="Home" asp-action="Index"> Home </a>
                    </li>
                    <li class="lis">
                        <a class="links" asp-controller="Pet" asp-action="Index"> My Pets </a>
                    </li>
                    <li class="lis">
                        <a class="links" asp-controller="User" asp-action="Update"> My Account </a>
                    </li>
                    <li class="lis">
                        <a class="links" asp-controller="User" asp-action="Logout"> Logout </a>
                    </li>

                }
                else
                {
                    <li class="lis">
                        <a class="links" asp-controller="Home" asp-action="Index"> Home </a>
                    </li>
                    <li class="lis">
                        <a class="links" asp-controller="User" asp-action="Login"> Login </a>
                    </li>
                    <li class="lis">
                        <a class="links" asp-controller="User" asp-action="Register"> Register </a>
                    </li>
                }
            </ul>
        </nav>
        <a class="cta " href="#"><button btn btn-class m-2>About</button></a>
    </header>
    @RenderBody()
</body>
</html>
