@inject IUserRepository _repository

<!DOCTYPE html>

<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-+0n0xVW2eSR5OomGNYDnhzAbDsOXxcvSN1TPprVMTNDbiYZCxYbOOl7+AMvyTG2x" crossorigin="anonymous">
    <link href="~/lib/css/styles.css" rel="stylesheet" />
    <title> Tracking The Toe Beans </title>
</head>

<body>
    <nav class="navbar navbar-">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">Tracking The Beans</a>
            </div>
            <ul class="nav navbar-nav">
                @if (_repository.IsUserLoggedIn())
                {
                    <li>
                        <a asp-controller="Home" asp-action="Index"> Home </a>
                    </li>
                    <li>
                        <a asp-controller="Pet" asp-action="Index"> My Pets </a>
                    </li>
                    <li>
                        <a asp-controller="User" asp-action="Update"> My Account </a>
                    </li>
                    <li>
                        <a asp-controller="User" asp-action="Logout"> Logout </a>
                    </li>

                }
                else
                {
                    <li>
                        <a asp-controller="Home" asp-action="Index"> Home </a>
                    </li>
                    <li>
                        <a asp-controller="User" asp-action="Login"> Login </a>
                    </li>
                    <li>
                        <a class="btn-area" asp-controller="User" asp-action="Register"> Register </a>
                    </li>
                }
            </ul>
        </div>
    </nav>
    @RenderBody()
</body>
</html>
