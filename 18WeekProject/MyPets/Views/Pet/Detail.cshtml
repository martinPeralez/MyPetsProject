@model Pet
@inject IHistoryRepository historyRepository
@inject IPetRepository petRepository

<div class="container">
    <div>
        <img src="@Model.CoverImageUrl" alt="Alternate Text" class="img-fluid" width="100" height="200" />
    </div>
    <div>

        <table class="content-table">
            <thead>
                <tr>
                    <th>Species:</th>
                    <th>Age:</th>
                    <th>Color:</th>
                    <th>Breed:</th>
                    <th>Sex:</th>
                    @if (Model.Sex == "Male")
                    {

                        <th>Neutered:</th>


                    }
                    else
                    {

                        <th>Spayed:</th>
                        

                    }
                    <th>Vet Form:</th>
                    <th>Update?</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.Species</td>
                    <td>@Model.Age</td>
                    <td>@Model.Color</td>
                    <td>@Model.Breed</td>
                    <td>@Model.Sex</td>
                    @if (Model.SpayNeuter)
                    {
                        <td>@Model.SpayNeuter</td>
                    }
                    else
                    {
                        <td>@Model.SpayNeuter</td>
                    }
                    <td><a href="@Model.VetFormUrl">Vet Form</a></td>
                    <td><a asp-controller="Pet" asp-action="Update" asp-route-id="@Model.Id"><button class="btn btn-class m-2"> Update Pet </button></a></td>
                    <td><a asp-controller="Pet" asp-action="Delete" asp-route-id="@Model.Id"><button class="btn btn-class m-2"> Delete Pet </button></a></td>
                </tr>
            </tbody>
        </table>
    </div>
    
    

    <br />
    <div class="row">
        @if (historyRepository == null)
        {
            <a asp-controller="History" asp-action="Create" asp-route-id="@Model.Id"> Add History </a>
        }
        else
        {
            <div>
                <table class="content-table">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Summary</th>
                            <th>Weight</th>
                            <th>Medication</th>
                            <th>First Meal</th>
                            <th>Second Meal</th>
                            <th>Appointment</th>
                            <th>Update?</th>
                            <th>Delete?</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (History history in historyRepository.GetAllHistories().Where(h => h.PetId == Model.Id).OrderBy(d => d.Date))
                        {

                        <tr>
                            <td>@history.Date</td>
                            <td>@history.Summary</td>
                            <td>@history.Weight</td>
                            <td>@history.Medication</td>
                            <td>@history.FirstMeal </td>
                            <td>@history.SecondMeal</td>
                            @if (history.Appointment)
                            {
                                <td class="appointment">@history.Appointment</td>
                            }
                            else
                            {
                                <td>@history.Appointment</td>
                            }
                            <td><a asp-controller="History" asp-action="Update" asp-route-id="@history.Id"><button class="btn btn-class m-2"> Update </button></a></td>
                            <td><a asp-controller="History" asp-action="Delete" asp-route-id="@history.Id"><button class="btn btn-class m-2"> Delete </button></a></td>
                        </tr>

                        }
                    </tbody>
                </table>
            </div>
            <a asp-controller="History" asp-action="Create" asp-route-id="@Model.Id"><button class="btn btn-class m-2"> Add History </button></a>
        }
    </div>
</div>