@model IQueryable<Pet>
@inject IUserRepository userRepository
@*@inject IPetRepository petRepository*@
<div class="card-title text-center m-3">
    <h4> My Pets </h4>
    <div>
        <a class="btn btn-class mt-2 text-center" asp-controller="Pet" asp-action="Create"> Add a Pet </a>
    </div>
</div>
@if (userRepository.IsUserLoggedIn())
{
    <div class="container-image">
        @foreach (var image in Model)
        {
            <div class="gallery">
                <a asp-controller="Pet" asp-action="Detail" asp-route-id="@image.Id"><img class="rounded-img" src="@image.CoverImageUrl" alt="Alternate Text" class="img-thumbnail" width="100" height="150" /></a>
            </div>
        }
    </div>
}